<script>
    let status = '<%=loggedin%>'
    let message = '<%=message%>'
    let title = '<%-title%>'
    let icon = '<%-icon%>'
    let confirmButtonText = '<%-confirmButtonText%>'
    if(message !== ""){
        Swal.fire({
            title: title,
            text: message,
            icon: icon,
            confirmButtonText: confirmButtonText
        }) 
    }
    if(status === "true"){
        document.getElementById("login-button").innerHTML = "Vault"
        document.getElementById("login-button").href = "/vault"
        document.getElementById("listelement").innerHTML = "Hello <%= username%>"
    }
    function scrollToTop(){
            window.scrollTo({top: 0, behavior: 'smooth'});
            element = document.getElementById('signupborder');
            let defaultBG = element.style.boxShadow;
            let defaultTransition =  "all 1s ease-in-out";

            element.style.transition = "all 1s ease-in-out";
            element.style.boxShadow = "7.44255px 14.8851px 65.4944px 22.3276px rgba(22, 63, 175, 0.7)";

            setTimeout(function()
            {
                element.style.boxShadow = defaultBG;
                setTimeout(function() {
                    element.style.transition =  defaultTransition;
                }, 1500);
            }, 1500);
        }
    function smoothscroll(element){
            element.scrollIntoView({
                behavior: 'smooth',
                block: 'start' // scroll to top of target element
            })
        }
    function reveal() {
            var reveals = document.querySelectorAll(".reveal");

            for (var i = 0; i < reveals.length; i++) {
                var windowHeight = window.innerHeight;
                var elementTop = reveals[i].getBoundingClientRect().top;
                var elementVisible = 150;

                if (elementTop < windowHeight - elementVisible) {
                reveals[i].classList.add("active");
                } else {
                reveals[i].classList.remove("active");
                }
            }
        }
    window.addEventListener("scroll", reveal);
</script>
