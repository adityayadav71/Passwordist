<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Add Notes</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap");
        *{
            margin: 0%;
            padding: 0%;
            font-family: "Poppins", sans-serif;
        }
        .body{
            display: flex;
            flex-direction: row;
            background: aliceblue;
        }
        .head_container{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            padding-bottom: 30px;
        }
        .navbar1{
            box-shadow: 7.44255px 14.8851px 26.0489px 9.67531px rgba(93, 95, 239, 0.25);
            display: flex;
            flex-direction: column;
            margin-bottom: 47px;
            align-items: center;
        }

        .logo1 {
            padding: 12px;
            display: flex;
            height: 38px;
            width: 37px;
        }
        .left_container{
            display: flex;
            flex-direction: column;
            margin-left: 100px;
        }
        .right_container{
            display: flex;
        }
        .title input{
            height: 40px;
            padding-left: 5px;
            border-radius: 4px;
            outline: none;
            border: 1px solid;
            width: 255px;
            display: flex;
        }
        .date input{
            padding-left: 5px;
            height: 40px;
            border-radius: 4px;
            outline: none;
            border: 1px solid;
            display: flex;
        }
        .time input{
            height: 40px;
            padding-left: 5px;
            border-radius: 4px;
            outline: none;
            border: 1px solid;
            display: flex;
        }
        .title{
            margin-top: 60px;
            margin-bottom: 30px;
        }
        .date{
            margin-bottom: 30px;
        }
        .time{
            margin-bottom: 30px;
        }
        .right_container{
            margin-right: 60px;
        }
        .notes{
            padding-left: 10px;
            padding-top: 5px;
        }
        .save-buttons{
            position: fixed;
            display: flex;
            bottom: 0;
            right: 0;
            width: 100%;
            height: 10%;
            background: linear-gradient(90deg, #4776e6 0%, #8e54e9 100%);
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
            align-content: stretch;
            flex-direction: row;
            justify-content: flex-end;
            align-items: center;
            flex-wrap: nowrap;
        } 
        .save:hover{
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="navbar1">
        <a href="/"><img class="logo1" src="../img/LOGO.png" alt="Logo"></a>
        <label>ADD A NOTE</label>
    </div>
    <form action="/save-notes" method="post">
    <div class="head_container">
        <div class="left_container">
            <div class="title">
                <label>Title: </label>
                <input type="text" class="Title_input" name="title" placeholder="Add Your Title">
            </div>

            <div class="date">
                <label>Date: </label>
                <input type="date" class="date_input" name="date">
            </div>

            <div class="time">
                <label>Time: </label>
                <input type="time" class="time_input" name="time" value="12:00">
            </div>
        </div>
        <input type = "hidden" id="color" name = "color" value="#FFF"/>
        <div class="right_container">
            <textarea class="notes" cols="50" rows="10" id="note" name="note" placeholder="WRITE YOUR NOTES HERE......"></textarea>
        </div>
    </div>
    <div class="save-buttons" id="save">
        <input class="save" type="submit" style="padding: 10px;margin: 12px;" value="Save" id="save-post-req" name="save">
    </div>
    </form>
    <a href="/vault" id="saved-redirect" style="display: none;" target="_top"></a>
</body>
<script>
    let message = '<%-message%>'
    let title = '<%-title%>'
    let icon = '<%-icon%>'
    let confirmButtonText = '<%-confirmButtonText%>'
    if(message !== ""){
        Swal.fire({
            title: title,
            text: message,
            icon: icon,
            confirmButtonText: confirmButtonText
        }) 
    } 
    document.getElementById("color").value = getRandomColor()
    function getRandomColor() {
        var letters = 'BCDEF'.split('');
        var color = '#';
        for (var i = 0; i < 6; i++ ) {
             color += letters[Math.floor(Math.random() * letters.length)];
        }
        return color;
    } 
    let saved = '<%-saved%>'
    if(saved === "true"){
        setTimeout(function(){
            document.getElementById("saved-redirect").click()
        }, 3000);
    }
</script>
</html>