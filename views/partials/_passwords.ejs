<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="../img/LOGO.ico" type="image/x-icon" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Add Passwords</title>
  </head>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap");
    * {
      margin: 0%;
      padding: 0%;
      font-family: "Poppins", sans-serif;
    }
    .body {
      display: flex;
      flex-direction: row;
      background-color: rgb(207, 28, 28);
    }

    .head_container_card {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .navbar {
      box-shadow: 7.44255px 14.8851px 26.0489px 9.67531px
        rgba(93, 95, 239, 0.25);
      display: flex;
      flex-direction: column;
      margin-bottom: 47px;
      align-items: center;
    }

    .logo {
      padding: 12px;
      display: flex;
      height: 38px;
      width: 37px;
    }

    .card_type {
      padding-bottom: 20px;
    }

    .card_number {
      padding-bottom: 20px;
    }

    .card_holder_name {
      padding-bottom: 20px;
    }
    .Expiry_date {
      padding-bottom: 20px;
    }
    .CVV {
      padding-bottom: 20px;
      margin-left: 150px;
      margin-bottom: 65px;
      margin-top: -86px;
    }
    .Expiry_date input {
      padding-left: 5px;
      height: 40px;
      border-radius: 4px;
      outline: none;
      border: 1px solid;
      display: flex;
    }
    .card_number input {
      height: 40px;
      padding-left: 5px;
      border-radius: 4px;
      outline: none;
      border: 1px solid;
      width: 255px;
      display: flex;
    }

    .card_holder_name input {
      height: 40px;
      padding-left: 5px;
      border-radius: 4px;
      outline: none;
      border: 1px solid;
      width: 255px;
      display: flex;
    }
    .CVV input {
      height: 42px;
      padding-left: 5px;
      border-radius: 4px;
      outline: none;
      border: 1px solid;
      width: 104px;
      display: flex;
    }
    .save-buttons {
      position: fixed;
      display: flex;
      bottom: 0;
      right: 0;
      width: 100%;
      height: 10%;
      background: linear-gradient(90deg, #4776e6 0%, #8e54e9 100%);
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
      align-content: stretch;
      flex-direction: row;
      justify-content: flex-end;
      align-items: center;
      flex-wrap: nowrap;
    }
    .save:hover {
      cursor: pointer;
    }
  </style>
  <body>
    <div class="navbar">
      <a href="/"><img class="logo" src="../img/LOGO.png" alt="Logo" /></a>
      <label>ADD A PASSWORD</label>
    </div>
    <form action="/save-passwords" method="post">
      <div class="head_container_card">
        <div class="start_head_container_card">
          <div class="card_number">
            <label>Website Name: </label>
            <input
              type="text"
              maxlength="16"
              name="website_name"
              placeholder="Enter name of the website"
            />
          </div>
          <div class="card_number">
            <label>URL: </label>
            <input
              type="text"
              name="website_url"
              placeholder="Enter Website URL"
            />
          </div>

          <div class="card_number">
            <label>Username: </label>
            <input
              type="text"
              maxlength="16"
              name="site_username"
              placeholder="Enter account username"
            />
          </div>

          <div class="card_holder_name">
            <label>Site Password: </label>
            <input
              type="text"
              name="site_password"
              placeholder="Enter account password"
            />
          </div>
        </div>
      </div>
      <div class="save-buttons" id="save">
        <input
          type="submit"
          class="save"
          style="padding: 10px; margin: 12px"
          value="Save"
          id="save-post-req"
          name="save"
        />
      </div>
      <a
        href="/vault"
        id="saved-redirect"
        style="display: none"
        target="_top"
      ></a>
    </form>
  </body>
  <script>
    let message = "<%-message%>";
    let title = "<%-title%>";
    let icon = "<%-icon%>";
    let confirmButtonText = "<%-confirmButtonText%>";
    if (message !== "") {
      Swal.fire({
        title: title,
        text: message,
        icon: icon,
        confirmButtonText: confirmButtonText,
      });
    }
    let saved = "<%-saved%>";
    if (saved === "true") {
      setTimeout(function () {
        document.getElementById("saved-redirect").click();
      }, 1500);
    }
  </script>
</html>
